/* components/manager-page/manager-page.wxss */
.manager-page {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.page-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.page-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.page-title {
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}

.card-container {
  margin-bottom: 60rpx;
}

.info-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.card-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
}

.action-item {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.action-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

.action-label {
  font-size: 28rpx;
  color: #fff;
}

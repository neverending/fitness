<!--components/manager-page/manager-page.wxml-->
<view class="manager-page">
  <view class="page-header">
    <text class="page-icon">{{userInfo.icon}}</text>
    <text class="page-title">店长中心</text>
  </view>
  
  <view class="card-container">
    <view class="info-card">
      <text class="card-title">{{userInfo.name}}店长</text>
      <text class="card-desc">店铺管理功能</text>
    </view>
  </view>

  <view class="action-grid">
    <view class="action-item" bindtap="manageStaff">
      <view class="action-icon">👥</view>
      <text class="action-label">员工管理</text>
    </view>
    <view class="action-item" bindtap="viewReports">
      <view class="action-icon">📊</view>
      <text class="action-label">经营报表</text>
    </view>
    <view class="action-item" bindtap="manageEquipment">
      <view class="action-icon">🏋️</view>
      <text class="action-label">设备管理</text>
    </view>
    <view class="action-item">
      <view class="action-icon">💰</view>
      <text class="action-label">收支管理</text>
    </view>
  </view>
</view>

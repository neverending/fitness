<!--components/boss-page/boss-page.wxml-->
<view class="boss-page">
  <view class="page-header">
    <text class="page-icon">{{userInfo.icon}}</text>
    <text class="page-title">老板中心</text>
  </view>
  
  <view class="card-container">
    <view class="info-card">
      <text class="card-title">{{userInfo.name}}老板</text>
      <text class="card-desc">企业级管理功能</text>
    </view>
  </view>

  <view class="action-grid">
    <view class="action-item" bindtap="viewAllStores">
      <view class="action-icon">🏢</view>
      <text class="action-label">门店管理</text>
    </view>
    <view class="action-item" bindtap="financialReport">
      <view class="action-icon">💰</view>
      <text class="action-label">财务报表</text>
    </view>
    <view class="action-item" bindtap="businessAnalysis">
      <view class="action-icon">📈</view>
      <text class="action-label">经营分析</text>
    </view>
    <view class="action-item">
      <view class="action-icon">⚙️</view>
      <text class="action-label">系统设置</text>
    </view>
  </view>
</view>

/* pages/test/test.wxss */
.test-container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #4CAF50;
  padding-left: 20rpx;
}

.info-item {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  padding: 15rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
}

.role-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.role-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background-color: #E8F5E9;
  border-radius: 15rpx;
  border-left: 6rpx solid #4CAF50;
}

.role-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.role-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.role-index {
  font-size: 24rpx;
  color: #666;
  background-color: #E3F2FD;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.debug-info {
  font-size: 24rpx;
  color: #666;
  background-color: #FFF3E0;
  padding: 20rpx;
  border-radius: 10rpx;
  white-space: pre-wrap;
  font-family: monospace;
}

.check-result {
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.success {
  color: #4CAF50;
  background-color: #E8F5E9;
}

.error {
  color: #F44336;
  background-color: #FFEBEE;
}

.back-btn {
  background-color: #4CAF50 !important;
  color: white !important;
  width: 100%;
  border-radius: 25rpx !important;
  font-size: 32rpx !important;
  padding: 25rpx !important;
  margin-top: 40rpx;
}

.back-btn::after {
  border: none !important;
}
/* pages/home/home.wxss */
.home-container {
  width: 100%;
  height: 100vh;
  background: #000;
  position: relative;
}

.role-swiper {
  width: 100%;
  height: 100vh;
}

.indicator-container {
  position: fixed;
  bottom: 80rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
  z-index: 100;
}

.indicator-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  cursor: pointer;
}

.indicator-dot.active {
  width: 40rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.5);
}
